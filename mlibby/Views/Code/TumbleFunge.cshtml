@{
    ViewBag.Title = "TumbleFunge";
    Layout = "~/Views/_LayoutPage.cshtml";
}
<div class="row">
    <section class="col-sm-6">
        <div>
            <h2 class="h-horizontal">File</h2>
            <select id="tumble-stock-files" class="form-control by-header">
                <option selected="selected" value="0">Choose a demo program...</option>
            </select>
        </div>
        <div class="form-inline">
            <div class="input-group">
                <label class="btn btn-default input-group-addon" title="Load File">
                    <span class="glyphicon glyphicon-folder-open "></span>
                    <span class="sr-only">Open File</span>
                    <input id="tubmle-file" type="file" style="display: none;">
                </label>
                <input id="file-name" type="text" class="form-control" />
            </div>
            <button id="save-file" class="btn btn-default" title="Save File" disabled="disabled">
                <span class="glyphicon glyphicon-hdd"></span>
                <span class="sr-only">Save File</span>
            </button>
        </div>

    </section>
    <section class="col-xs-6 col-sm-3">
        <h2>Controls</h2>
        <button id="tumble-reset" class="btn btn-primary" title="Reset Board">
            <span class="glyphicon glyphicon-refresh"></span>
            <span class="sr-only">Reset Befunge</span>
        </button>
        <button id="tumble-run" class="btn btn-primary" title="Run">
            <span class="glyphicon glyphicon-play"></span>
            <span class="sr-only">Run</span>
        </button>
        <button id="tumble-pause" class="btn btn-primary hidden" title="Pause">
            <span class="glyphicon glyphicon-pause"></span>
            <span class="sr-only">Pause</span>
        </button>

    </section>
    <section class="col-xs-6 col-sm-3">
        <h2>Speed</h2>
        <button id="tumble-slower" class="btn btn-info" title="Slower">
            <span class="glyphicon glyphicon-chevron-down"></span>
            <span class="sr-only">Slower</span>
        </button>
        <button id="tumble-faster" class="btn btn-info" title="Faster">
            <span class="glyphicon glyphicon-chevron-up"></span>
            <span class="sr-only">Faster</span>
        </button>
    </section>
</div>
<div class="row">
    <section class="col-sm-6">
        <div class="form-inline">
            <h2 class="h-horizontal">Console</h2>
            <button id="tumble-clear" class="btn btn-danger by-header" title="Clear Console"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span><span class="sr-only">Clear Console</span></button>
        </div>
        <textarea id="befunge-console" class="form-control" readonly="readonly"></textarea>
    </section>
    <section class="col-sm-6">
        <div>
            <h2 class="h-horizontal">Stack</h2>
            <select id="tumble-stack-mode" class="form-control by-header">
                <option value="asc" selected="selected">ascii</option>
                <option value="dec">decimal</option>
                <option value="hex">hexadecimal</option>
            </select>
        </div>
        <textarea id="tumble-stack" class="form-control" readonly="readonly"></textarea>
    </section>
</div>
<div class="row">
    <section class="col-sm-12">
        <textarea cols="12" rows="24" class="hidden"></textarea>
    </section>
</div>
<div class="row">
    <section class="col-sm-12">
        <h2>The Board</h2>
        <div id="board-wrapper">
            <div id="board">
            </div>
        </div>
    </section>
</div>
<script src="~/js/tumble.js"></script>