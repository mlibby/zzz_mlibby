<!DOCTYPE html>

<html>
<head>
    <title>@ViewBag.Title - mlibby.com</title>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <meta name="description" content="I am Michael C. Libby and this is my web site. I am a software developer, web developer, and accessibility enthusiast. My friends call me &ldquo;Libby.&rdquo;">

    @Styles.Render("~/bundles/css")
    @Scripts.Render("~/bundles/libs")
    @Scripts.Render("~/bundles/js")
    
    <link rel="canonical" href="http://mlibby.com/">
</head>

<body class="">
    <nav class="navbar navbar-inverse">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle btn btn-default" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="glyphicon glyphicon-menu-hamburger"></span>
                </button>
                <a class="navbar-brand" href="/">mlibby.com</a>
                <h1>@ViewBag.Title</h1>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="/Home/About/">About Me</a></li>
                    <li><a href="/Code/">My Code</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <main class="container">
        @RenderBody()
    </main>
</body>

</html>


